## SHELL ALIASES

alias b='$BROWSER'
alias e='neomutt'
alias g='git'
alias q='exit'
alias r='ranger'
alias v='vim'

# files
alias bat='bat -pp'
alias pdfpages='qpdf --show-npages'

# history
alias hist='cat $HISTFILE'
alias hgrep='cat $HISTFILE | grep'

# directories
alias l='ls'
alias la='LC_ALL=C ls -lc --human-readable --group-directories-first --almost-all'
alias lh='LC_ALL=C ls -lc --human-readable --group-directories-first'
alias ll='ls -1'

# GIT
alias ga='git add'
alias gc='git commit'
alias gd='git diff'
alias gs='git status --short'
alias gl='git log --oneline'
alias gg='git log --oneline --graph --full-history --all'

# DOCKER
alias dc='docker-compose'
alias dup='docker-compose up -d'
alias ddown='docker-compose down'
alias dk='docker'
alias dke='docker exec'
alias dkei='docker exec -it'
alias dker='docker exec --user root'
alias dkeir='docker exec -it --user root'
alias dkps="docker ps --format '{{.Names}} {{.Image}}'"

# NPM
alias naudit='npm audit'
alias nauditf='npm audit fix'
alias nbuild='npm run build'
alias npublish='npm publish --access=public'
alias nserve='npm run serve'
alias ndev='npm run dev'
alias ndev-js='npm run dev-js'
alias ndev-css='npm run dev-css'
alias nprod='npm run prod'
alias nprod-js='npm run prod-js'
alias nprod-css='npm run prod-css'
alias nwatch='npm run watch'
alias nwatch-js='npm run watch-js'
alias nwatch-css='npm run watch-css'

# LARAVEL
alias pa='php artisan'
alias pam='php artisan migrate'
alias pam:r='php artisan migrate:refresh'
alias pam:rs='php artisan migrate:refresh --seed'
alias par:l='php artisan route:list --compact'
alias tinker='php artisan tinker'

# XDG
alias ssh='ssh -F ${XDG_CONFIG_HOME}/ssh/config'
alias mbsync='mbsync -c ${XDG_CONFIG_HOME}/mbsync/mbsyncrc'
alias startx='startx "${XDG_CONFIG_HOME}/X11/xinitrc" -- "${XDG_CONFIG_HOME}/X11/xserverrc" vt1'

# others
alias rename='perl-rename'
