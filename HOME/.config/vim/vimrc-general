"""""""""""""""""""""
" VIMRC             "
"""""""""""""""""""""

" don't be compatible with vi
" (required for some of vim's features)
set nocompatible

" syntax highlighting
syntax on

" size of command history
set history=5000

" activate mouse on all modes
set mouse=a

" use system's clipboard
set clipboard=unnamedplus

" relative line numbers
set number relativenumber

" indentation settings
set autoindent smartindent

" tab settings
set softtabstop=2 tabstop=2 shiftwidth=2 expandtab

" highlight search while typing
set incsearch

" highlight all strings matching the search pattern
set hlsearch

" don't wrap lines!
set wrap!

" don't redraw the screen when using macros
set lazyredraw

" show suggestions for selection/commands
set wildmenu

" folding settings
set foldmethod=syntax foldlevel=99

" text enconding
set encoding=utf8

" don't hide double quotes in json files
set conceallevel=0

" show at least one line below/above the cursor
set scrolloff=1

" autoload file changes
set autoread

" cursor hightlight
set cursorline

" hide statusline by default
set laststatus=0

" make path include current dir, dir of current file, and subdirs
set path=.,,**

" ignore some directories when searching files
set wildignore+=**/node_modules/** 
set wildignore+=**/vendor/** 
set wildignore+=**/.git/** 
set wildignore+=**/.cache/** 

"""""""""""""""""""""
" CHARS             "
"""""""""""""""""""""

" custom chars for invisible characteres
set listchars=eol:¬,tab:↳\ ,trail:~,extends:>,precedes:<,space:·

" Char Unicode
" ↲    u21b2
" ↳    u21b3
" →    u2192
" •    u2022
" ◦    u25e6
" ‧    u2027
" ▪    u25aa

" more at: https://www.w3schools.com/charsets/ref_utf_punctuation.asp
" press <C-v> in Insert Mode then type the unicode to insert UTF-8 char

"""""""""""""""""""""
" FILE MANAGER      "
"""""""""""""""""""""

" abide to xdg
let g:netrw_home = $XDG_DATA_HOME."/vim"

" turn off top banner
let g:netrw_banner=0

" set default style view
let g:netrw_liststyle=3

" n layout
" 0 default
" 1 details
" 2 column
" 3 tree

" open preview of files to the right
let g:netrw_preview=1

" initial size of the file menu (percentage of the window)
let g:netrw_winsize=20

" open files to the right
let g:netrw_altv=1
