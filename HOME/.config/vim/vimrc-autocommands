" ---------------------------------------------------------------------------
" AUTO COMMANDS
" ---------------------------------------------------------------------------

augroup lisp_highlight
  au!
  au BufEnter *.rkt silent call RainbowOn()
  au BufEnter *.el silent call RainbowOn()
augroup END

augroup mysyntax
  au!
  au BufEnter .env.* set syntax=sh
  au FileType markdown set syntax=markdown.pandoc conceallevel=0
augroup END

augroup myfiletypes
  au!
  au BufEnter config set filetype=toml
augroup END

augroup mymappings
  au!
  au FileType cpp nnoremap <buffer> <space>o !!cout<CR>
augroup END

augroup mycoc
  au!
  au FileType text let b:coc_enabled=0
  au BufRead *.org let b:coc_enabled=0
  au BufRead **/qutebrowser/config.py let b:coc_enabled=0
  au BufRead **/dwm/*,**/dwmblocks/*,**/dvtm/* let b:coc_enabled=0
augroup END

augroup mygitcommit
  au!
  au FileType gitcommit let b:EditorConfig_disable=1 | let b:coc_enabled=0
augroup end

augroup mywriting
  au!
  au FileType mail set spell
  au BufRead diary*.txt set spell
augroup END

" augroup mycolorscheme
"   au!
"   au FileType c,cpp colorscheme pop-punk
"   au FileType python colorscheme onedark
"   au FileType perl,shell,vim colorscheme eldar
"   au FileType markdown,markdown.pandoc,tex colorscheme gruvbox
"   au FileType html,java,javascript,json,php,snippets,vue colorscheme codedark
" augroup END
