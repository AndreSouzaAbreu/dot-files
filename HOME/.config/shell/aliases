#!/bin/sh

# ------------------------------------------------
# SHELL ALIASES
# ------------------------------------------------

# shortcuts --------------------------------------------------------------------

alias a='aliases'
alias b='$BROWSER'
alias c='coins'
alias e='envvars'
alias f='myfunctions'
alias g='git'
alias h='hist'
alias m='neomutt'
alias n='newsboat'
alias o='open'
alias p='profile'
alias q='exit'
alias s='sxiv'
alias t='touch'
alias y='yay'

# more shorctus ----------------------------------------------------------------

alias oc='octave'
alias py='ipython'
alias rr='ranger'
alias za='tabbed -c zathura -e'
alias s.='sxiv .'

# files ------------------------------------------------------------------------

alias ls='exa'
alias la='exa --icons -lhgH --group-directories-first --all'
alias ll='exa --icons -lhgH --group-directories-first'
alias l1='exa --icons -1hgH --group-directories-first'

# long-name programms -----------------------------------------------------------

alias rename='perl-rename'
alias open='xdg-open'
alias off='loginctl poweroff'
