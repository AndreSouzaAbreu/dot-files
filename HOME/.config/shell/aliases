#!/bin/sh

# ------------------------------------------------
# SHELL ALIASES
# ------------------------------------------------

# shortcuts --------------------------------------------------------------------

alias a='aliases'
alias b='$BROWSER'
alias c='coins'
alias e='envvars'
alias f='myfunctions'
alias g='git'
alias m='neomutt'
alias o='open'
alias p='profile'
alias q='exit'
alias v='nvim-gui'
alias y='yay'

# more shorctus ----------------------------------------------------------------

alias js='node'
alias oc='octave'
alias py='HOME=/tmp python'
alias vv='v ~/.config/vim'
alias v.='v .'
alias xx='startx'
alias za='tabbed -c zathura -e'

# files ------------------------------------------------------------------------

alias exa='exa --color=never'
alias l='exa'
alias ls='exa'
alias la='exa -lhgH --group-directories-first --all'
alias ll='exa -lhgH --group-directories-first'
alias l1='exa -1hgH --group-directories-first'

# long-name programms -----------------------------------------------------------

alias open='xdg-open'
alias rename='perl-rename'
alias chromium='ungoogled-chromium'
alias tab='tabbed'

# clipboard stuff ---------------------------------------------------------------

alias xcopy='xclip -selection clipboard'
alias curlx='curl "$(xclip -o selection clibpoard)"'
alias mpvx='mpv "$(xclip -o -selection clipboard)"'
alias xpaste='xclip -out -selection clipboard'

# programms with default options -----------------------------------------------

alias tree='tree --charset=ascii'
alias python='python -q'
alias octave='octave -q'
alias R='R -q'

# shells -----------------------------------------------------------------------

alias bash='SHELL=/bin/bash bash'
alias zsh='SHELL=/bin/zsh zsh'

# shell history ----------------------------------------------------------------

alias hist='cat $HISTFILE'
alias hgrep='cat $HISTFILE | grep'
alias histedit='$EDTIOR $HISTFILE'

# git --------------------------------------------------------------------------

alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gC='git clone'
alias gd='git diff'
alias gs='git status --short'
alias gk='git checkout'
alias gl='git log --oneline'
alias gg='git log --oneline --graph --full-history --all'

# docker -----------------------------------------------------------------------

alias dk='docker'
alias dkps='docker ps'
alias dke='docker exec'
alias dkei='docker exec -it'
alias dker='docker exec --user root'
alias dkeir='docker exec -it --user root'

# docker-compose ---------------------------------------------------------------

alias dup='docker-compose up -d'
alias ddown='docker-compose down'

# Laravel ----------------------------------------------------------------------

alias pa='php artisan'
alias pam='php artisan migrate'
alias par='php artisan route:list --compact'
alias tinker='php artisan tinker'

# Java ------------------------------------------------------------------------

alias ja='java-algs4'
alias jac='javac-algs4'

# npm --------------------------------------------------------------------------

alias naudit='npm audit'
alias nauditf='npm audit fix'
alias npublish='npm publish --access=public'

# npm scripts ------------------------------------------------------------------

alias nbuild='npm run build'
alias ndev='npm run dev'
alias ndev-js='npm run dev-js'
alias ndev-css='npm run dev-css'
alias nprod='npm run prod'
alias nprod-js='npm run prod-js'
alias nprod-css='npm run prod-css'
alias nrun='npm run'
alias nserve='npm run serve'
alias nwatch='npm run watch'
alias nwatch-js='npm run watch-js'
alias nwatch-css='npm run watch-css'

# pacman -----------------------------------------------------------------------

alias pqeq='pacman -Qeq'
alias pss='pacman -Ss'
alias ppr='doas pacman -Rsn'
alias pS='doas pacman -S'
alias pp='doas pacman -Syu'

# yay --------------------------------------------------------------------------

alias yqeq='yay -Qeq'
alias yss='yay -Ss'
alias yyr='yay -Rsn'
alias yS='yay -S'
alias yy='yay -Syu'

# XDG Dirs --------------------------------------------------------------------

# hardcoded solutions

alias jupyter='HOME=${XDG_DATA_HOME}/jupyter jupyter'
alias monerod='HOME=${XDG_DATA_HOME}/monero monerod'
alias monero-wallet-gui='HOME=${XDG_DATA_HOME}/monero monero-wallet-gui'

# custom config for programms

alias claws-mail='claws-mail --alternate-config-dir ${XDG_DATA_HOME}/claws-mail'
alias mbsync='mbsync -c ${XDG_CONFIG_HOME}/mbsync/mbsyncrc'
alias ssh='ssh -F ${XDG_CONFIG_HOME}/ssh/config'
alias scp='scp -F ${XDG_CONFIG_HOME}/ssh/config'
alias startx='startx ${XINITRC} -- ${XSERVERRC} vt1'
